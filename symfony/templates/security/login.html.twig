<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="UTF-8">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" href="/build/admin.css">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="login__content">

        <div class="admin-card">
            <div class="card-header card-header-primary">
                <h1 class="cart-title">
                    {{ 'Login'| trans }}
                </h1>
            </div>
            <div class="card-body">
                {% block content %}
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <div class="form__inputs">
                        <label for="username">Email:</label>
                        <input type="text" id="username" name="_username" value="" />
                    </div>

                    {# Input para el campo contraseña #}
                    <div class="form__inputs">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" name="_password" />
                    </div>

                    {# Ruta a la que redirige si hay éxito #}
                    <input type="hidden" name="_target_path" value="{{ path('admin_panel') }}" />

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="btn__wrapper"><button class="btn-primary" type="submit">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
        {% endblock %}
    </div>
</body>
{# Enlace al registro #}
